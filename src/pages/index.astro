---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import Layout from "../layouts/PageLayout.astro";
import Logo from "../../public/assets/logo.svg";
// Import Images
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/public/assets/*.{jpeg,jpg,png,gif}",
  { eager: true },
);

const imageArray = Object.values(images);
const { imagePath } = Astro.props;
---

<Layout title="Kompo | Full stack">
  <section class="hero relative h-svh w-screen overflow-hidden">
    <div
      class="hero-bg absolute top-0 left-0 w-full h-full origin-bottom transform-scaleY"
    >
    </div>

    <div
      class="counter fixed right-12 bottom-10 flex h-30 font-digit leading-digit"
    >
      <div class="digit count-1"></div>
      <div class="digit count-2"></div>
      <div class="digit count-3"></div>
    </div>

    <div class="images-wrapper absolute top-0 left-0 w-full h-full">
      {
        imageArray.map((image) => (
          <Image
            class="img absolute top-6 left-6 w-[30%] h-[30%] object-top object-cover rounded-xl overflow-hidden "
            alt="Dynamic Alt"
            src={image.default}
            loading="eager"
            decoding="async"
          />
        ))
      }
    </div>

    <nav class="invisible flex items-center justify-center">
      <div class="logo-name">
        <a href="/">Konpo</a>
      </div>

      <div class="nav-items flex items-center gap-30">
        <div class="links flex items-center">
          <p class="text-sm tracking-wide">Good Morning!</p>
        </div>

        <div class="cta">
          <a
            class="text-white rounded-full text-xl w-30 bg-black flex justify-center items-center h-8"
            href="/contact">Hire me</a
          >
        </div>

        <div class="divider"></div>
      </div>
    </nav>

    <div class="invisible sidebar">
      <div class="logo relative">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
        <span
          class="circle absolute bg-[#F2F0F9] rounded-full w-3 h-3 translate-y-1/2 -translate-x-1/2 top-0 left-1/2"
        ></span>
      </div>

      <div class="divider"></div>
    </div>

    <div
      class="invisible header h-ful text-center flex flex-col items-center gap-32 justify-center"
    >
      <div>
        <h1 class="text-2xl">Amangoua Ange-Th,</h1>
        <h1 class="text-2xl">Creative Developer</h1>
      </div>

      <div>
        <p class="w-110 leading-4.5 text-center">
          Konpo is a plug-and-play crew of seasoned designers, for CXOs that
          know design is an unfair advantage.
        </p>
      </div>
    </div>
  </section>
</Layout>
